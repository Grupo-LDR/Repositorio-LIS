- const employee_id=3
- const user = {    id: 1,    last_name: "Rodriguez",    first_name: "Luis"}
- const employee = {    last_name: "Rodriguez",    first_name: "Luis"}
//- sampletype new 
include ../head

- const examDate = new Date();
div(class="container mt-5")
    div(class="row justify-content-center")
        div(class="col-12")
            div(class="rounded p-1 border ") 
                h1 Admin Sample Type
                p Date:  #{examDate.toLocaleDateString()} 
                div(class="block")
                    //- button(class="btn btn-primary m-2" id="btnFiltrar") PreView 
                    //- button(class="btn btn-primary m-2" id="sendButton") Send

                    table(class="table table-striped table-hoverdisplay display responsive nowrap justify-content-center" id="orderTable" )                    
                        thead(class="table-primary")
                            button(type="button" class="blue-button box-shadow" id="btn_new_type")  New Sample Type
                                tr
                                    td(class="text-center align-middle fs-6") #
                                    td(class="text-center align-middle fs-6") Name
                                    td(class="text-center align-middle fs-6") Administration

                        tbody()      
                            each sample in samples
                                tr(class="row-exam " id="tr#{sample.id}")
                                    //- td(class="text-center align-middle fs-5") 
                                    //- input(class="seleccion" type="checkbox" id="orderNew"+exam.id name="orderNew" value=exam.id)
                                    td(class="text-center align-middle fs-6")  #{sample.id}
                                    td(class="align-middle  fs-6")  #{sample.name}
                                    td(class="text-center align-middle userEdit")
                                        i(class="fa-solid fa-pen-to-square px-2   userLink"  name=user.id accion="editUser")
                                        i(class="fa-solid fa-folder-plus fa-beat  px-2   userLink" name=user.id accion="newOrderUser")
                                        i(class="fa-regular fa-folder-open fa-beat  px-2   userLink" name=user.id accion="viewOrdersUser")
dialog(id="dialog")
    form(id="myForm" action="./sampletype" method="post")
        h2(id="dialogid") New Sample Type
            hr
            label Name:
                input(type="text" name="name" required)
            button(type="submit" formmethod="post" class="m-4") Submit
            button(id="jsbutton" class="m-5") close
            button(id="reset" type="reset") Reset

script(src="/assets/js/sampleType.js" defer )    
script(src="/assets/js/dialog.js" defer )   
