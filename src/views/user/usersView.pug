table.table-responsive.table.table-striped.display.nowrap.justify-content-center#usersTable
    thead 
        tr
            td(class="text-center align-middle fs-6") Paciente
            td(class="text-center align-middle fs-6") Ordenes Status
            td(class="text-center align-middle fs-6") Admi Paciente
            //- td(class="text-center align-middle fs-6") Email
            //- td(class="text-center align-middle fs-6") Document
            //- td(class="text-center align-middle fs-6") Phone
            //- td(class="text-center align-middle fs-6") Orders Details
    tbody()      
        each user in usuarios
            tr(class="tableTr responsive")                    
                td                 
                    p(id="search"+user.id name=user.id) #{user.first_name}, #{user.last_name}
                    p #{user.email}
                    p #{user.document}
                    p #{user.phone}
                td(class="text-center align-middle userEdit")
                    each order in user.orders
                        - let sta
                        case order.status
                            when 1
                                - sta="status-orange"
                            when 2
                                - sta="status-red"
                            when 3
                                - sta="status-green"
                            default
                                - sta="status-black"                                                  
                        span(class=`fa-regular fa-folder-open ${sta}  px-2 userLink` id=order.id name=user.id route="viewOrdersUser")  #{order.id}
                td(class="text-center align-middle userEdit")
                    i(class="fa-solid fa-pen-to-square px-2   userLink"  name=user.id route="editUser")
                    i(class="fa-solid fa-folder-plus   px-2   userLink" name=user.id route="newOrderUser")



