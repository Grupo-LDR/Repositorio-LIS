form( accion="/" method ="post" name="form" id="form_edit")
    div(class="container mt-5")
        div(class="row justify-content-center")
            div(class="col-12")
                div(class="rounded p-4 border table-container")
                    table(class="table table-striped table-hover" id="usersTable" )                    
                        thead(class="table-primary")
                            tr
                                td(class="text-center align-middle fs-3") #
                                td(class="text-center align-middle fs-5") Edit
                                td(class="text-center align-middle fs-5") New Order
                                td(class="text-center align-middle fs-3") User
                                td(class="text-center align-middle fs-3") Email
                                td(class="text-center align-middle fs-3") Document
                                td(class="text-center align-middle fs-3") Phone                           
                                td(class="text-center align-middle fs-3") Address
                                //- td(class="text-center align-middle") Age
                        tbody(id="usersTd")
                            each user in usuarios
                                tr
                                    td(class="text-center align-middle")  #{user.id}
                                        input(type="radio" class="form-check-input" name=user.id id=user.id)
                                    td(class="text-center align-middle")
                                        a(href="/user/edit/"+user.id name=user.id  class="text-dark")
                                            i(class="fa-solid fa-pen-to-square fa-beat px-1 text-dark fs-6")
                                    td(class="text-center align-middle")
                                        a(href="/order/new/"+user.id name=user.id  class="text-dark")
                                            i(class="fa-solid fa-file fa-beat  px-1 text-dark fs-6")
                                    td 
                                        a(class="w-100 h-100 -usuario" href="/userview/"+user.id id="search"+user.id name="nam"+user.id) #{user.first_name}, #{user.last_name}
                                    td #{user.email}
                                    td(class="text-center align-middle") #{user.document}
                                    td(class="text-center align-middle") #{user.phone}
                                    td(class="text-center align-middle") #{user.address}
                                //- td(class="text-center align-middle") #{user.edad}
    button(type="submit" class="btn btn-primary m-2" name="button_confirm" id="button_confirm") Send
