table(class="table table-striped table-bordered table-hover h6 mt-5")
  thead(class="thead-dark")
    tr(class="bg-primary")
      th(scope="col") #
      th(scope="col") DNI
      th(scope="col") Name
      th(scope="col") Phone
      th(scope="col") Email 
      th(scope="col") Genre 
      th(scope="col") Location
      th(scope="col") Update
      th(scope="col") Delete

  tbody
    each user, index in users
      tr
        th(scope="row") #{index + 1}
        td #{user.document}
        td #{user.first_name}
        td #{user.last_name}
        td #{user.phone}
        td #{user.email}
        td #{user.gender}
        td #{user.adress}
        td #{user.date_birth_at}
        td #{user.date_create_at}
        td
          div(class="w-100 text-center")
            a(href=`/usuarios/${user.id}/update` id="update" class="update2")
              i(class="fa-solid fa-pen update px-1")
        td
          div(class="w-100 text-center")
            a(href=`/usuarios/${user.id}/delete`)
              i(class="fa-solid fa-trash enlaceMenu px-1")
